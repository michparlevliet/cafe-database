@model IEnumerable<PassionProject.Models.CafeDto>
@{
    ViewBag.Title = "List";
}

<h2 style="margin:1em 0 1em 0;">Cafes</h2>
<div style="display:flex;gap:1em;flex-flow:column;">
    @foreach (var cafe in Model)
    {
        <div class="btn btn-primary btn-lg" style="background-color: darkslategrey; color: white">
            <h3><a style="text-decoration:none; color:white" href="/Cafe/Details/@cafe.CafeId">@cafe.CafeName</a></h3>
            <p style="color: darkseagreen;">@cafe.CafeLocation</p>
        </div>

    }
</div>


